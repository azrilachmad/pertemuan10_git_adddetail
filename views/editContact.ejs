<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Contact </h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %> </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact/update">
        <input type="hidden" name="oldName" value="<%= contacts.oldName || contacts.name %>">
        <div class="mb-3">
          <label for="name" class="form-label">Name :</label>
          <input type="text" class="form-control" id="name" name="name" required value="<%= contacts.name %>">
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Email :</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contacts.email %>">
        </div>
        <div class="mb-3">
          <label for="mobile" class="form-label">Phone Number :</label>
          <input type="text" class="form-control" id="mobile" name="mobile" value="<%= contacts.mobile %>">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>

    </div>
  </div>
</div>